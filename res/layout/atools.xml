<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_atools_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
               android:textColor="#ffffffff"
        android:layout_marginTop="5dip"
        android:text="手机号码归属地查询"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip" >

        <LinearLayout
            android:layout_width="280dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:text="设置手机归属地服务"
                android:textSize="22sp" 
                       android:textColor="#ffffffff"/>

            <TextView
                android:id="@+id/tv_atools_address"
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:text="归属地服务未开启"
                android:textColor="#ffffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_atools_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" 
                   android:textColor="#ffffffff"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />
	    <TextView
        android:id="@+id/tv_atools_select_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="更改归属地显示风格"
        android:textColor="#ffffffff"
        android:textSize="24sp" />
        <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />
	    <TextView
        android:id="@+id/tv_atools_change_location"
       	android:textColor="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="更改归属地显示位置"
        android:textSize="24sp" />
	    
	    
	    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />
<LinearLayout 
    	android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
      <TextView
        android:id="@+id/tv_smsBackup"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dip"
        android:text="短信备份"
        android:gravity="center_vertical"
          android:textColor="#ffffffff"
        android:textSize="24sp" />
      
    <Button
        android:id="@+id/bt_clearSmsBackup"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="12sp"
        android:textColor="@android:color/holo_orange_light"
        android:text="删除短信备份文件！" />
      
    
    
    </LinearLayout>
  
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tv_smsRestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
          android:textColor="#ffffffff"
        android:text="短信的还原"
        android:textSize="24sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />
    
    <TextView
        android:id="@+id/tv_lockApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
          android:textColor="#ffffffff"
        android:text="程序锁"
        android:textSize="24sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/tv_CommonNumQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
          android:textColor="#ffffffff"
        android:text="常用号码查询"
        android:textSize="24sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="@android:color/white" />

</LinearLayout>